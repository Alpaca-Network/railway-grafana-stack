# ============================================================================
# GatewayZ Monitoring Stack - Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to source control!
# ============================================================================

# --------------------------------------------------------------------------
# REQUIRED: API Authentication
# --------------------------------------------------------------------------
# Bearer token for staging API authentication
STAGING_BEARER_TOKEN=your_staging_bearer_token_here

# --------------------------------------------------------------------------
# REQUIRED: Grafana Admin Credentials
# --------------------------------------------------------------------------
# CHANGE THESE FROM DEFAULTS!
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_secure_password_here

# --------------------------------------------------------------------------
# REQUIRED: Alert Email Configuration
# --------------------------------------------------------------------------
ALERT_EMAIL=your-email@example.com
GF_SMTP_USER=your-smtp-email@gmail.com
GF_SMTP_PASSWORD=your-app-password

# --------------------------------------------------------------------------
# Redis Configuration (if using external Redis)
# --------------------------------------------------------------------------
REDIS_ADDR=redis:6379
REDIS_PASSWORD=

# --------------------------------------------------------------------------
# Backend API URLs
# --------------------------------------------------------------------------
API_BASE_URL=https://api.gatewayz.ai

# --------------------------------------------------------------------------
# Internal Service URLs (for Docker Compose networking)
# --------------------------------------------------------------------------
PROMETHEUS_INTERNAL_URL=http://prometheus:9090
LOKI_INTERNAL_URL=http://loki:3100
TEMPO_INTERNAL_URL=http://tempo:3200
MIMIR_INTERNAL_URL=http://mimir:9009

# --------------------------------------------------------------------------
# SMTP Configuration
# --------------------------------------------------------------------------
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_FROM_ADDRESS=grafana@gatewayz.ai
GF_SMTP_FROM_NAME=GatewayZ Monitoring

# --------------------------------------------------------------------------
# Environment Label
# --------------------------------------------------------------------------
ENVIRONMENT=production
