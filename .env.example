# ============================================================================
# GatewayZ Monitoring Stack - Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to source control!
# ============================================================================

# --------------------------------------------------------------------------
# REQUIRED: Grafana Admin Credentials
# --------------------------------------------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_secure_password_here

# --------------------------------------------------------------------------
# REQUIRED: API Authentication (for Prometheus to scrape backend)
# --------------------------------------------------------------------------
# Bearer token from your backend API
STAGING_BEARER_TOKEN=your_staging_bearer_token_here

# --------------------------------------------------------------------------
# Backend API URL (for json-api-proxy to fetch metrics)
# --------------------------------------------------------------------------
API_BASE_URL=https://api.gatewayz.ai

# --------------------------------------------------------------------------
# Redis Exporter (to monitor backend's Redis)
# --------------------------------------------------------------------------
REDIS_ADDR=your-redis-host.railway.app:6379
REDIS_PASSWORD=your_redis_password

# --------------------------------------------------------------------------
# SMTP/Email Alerts (optional)
# --------------------------------------------------------------------------
ALERT_EMAIL=your-email@example.com
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=your-smtp-email@gmail.com
GF_SMTP_PASSWORD=your-app-password
GF_SMTP_FROM_ADDRESS=grafana@gatewayz.ai
GF_SMTP_FROM_NAME=GatewayZ Monitoring

# --------------------------------------------------------------------------
# Environment Label
# --------------------------------------------------------------------------
ENVIRONMENT=production

# ============================================================================
# BACKEND ENVIRONMENT VARIABLES (set these in your BACKEND Railway project)
# ============================================================================
# To enable distributed tracing from your backend to this Tempo instance:
#
# TEMPO_ENABLED=true
# TEMPO_OTLP_HTTP_ENDPOINT=https://your-tempo-service.railway.app:4318
# OTEL_SERVICE_NAME=gatewayz-api
#
# If both projects are in the same Railway environment, use internal networking:
# TEMPO_OTLP_HTTP_ENDPOINT=http://tempo.railway.internal:4318
# ============================================================================
